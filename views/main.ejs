<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <title>GamePedia</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <%- include('../Templates/header'); -%>
<main class="main">
    <h1 class="section-title">Нові ігри</h1>
    <div class="games-grid">
        <% newGames.forEach(function(game) { %>
            <a href="/games/<%= game.id %>" class="game-card">
                <img src="<%= game.bannerURL || game.imageURL %>" alt="<%= game.title %>" class="game-banner-img">
                <div class="game-card-title"><%= game.title %></div>
            </a>
        <% }) %>
    </div>

    <h1 class="section-title">Топ за рейтингом</h1>
    <div class="games-grid">
        <% topGames.forEach(function(game) { %>
            <a href="/games/<%= game.id %>" class="game-card">
                <img src="<%= game.bannerURL || game.imageURL %>" alt="<%= game.title %>" class="game-banner-img">
                <div class="game-card-title"><%= game.title %></div>
            </a>
        <% }) %>
    </div>
</main>


<script src=""></script>

</body>
</html>

